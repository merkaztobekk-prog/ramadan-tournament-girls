{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Server",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/server/src/index.ts",
            "runtimeExecutable": "npx",
            "runtimeArgs": [
                "tsx"
            ],
            "console": "integratedTerminal"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Current File (TS)",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${file}",
            "runtimeExecutable": "npx",
            "runtimeArgs": [
                "tsx"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/server"
        }
    ]
}